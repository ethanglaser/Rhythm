<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

    <ImageView
        android:id="@+id/trackImageView"
        android:layout_width="412dp"
        android:layout_height="554dp"
        android:contentDescription="Track Image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:text="Current Workout Tempo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actualTempo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="Song Tempo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackImageView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="Battery % Remaining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackImageView" />

    <TextView
        android:id="@+id/actualTempo"
        android:layout_width="121dp"
        android:layout_height="24dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/actualWorkout"
        android:layout_width="122dp"
        android:layout_height="16dp"
        android:text="Tracking..."
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/actualBattery"
        android:layout_width="116dp"
        android:layout_height="58dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>